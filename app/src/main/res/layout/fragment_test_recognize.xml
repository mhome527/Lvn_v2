<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgSpeak"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_volume_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgSpeak"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:background="@color/ALL_orange"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="100dp"
                android:padding="15dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_arrow_left_selector" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/pagerRecognize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="13dp" />

            <LinearLayout
                android:id="@+id/llRight"
                android:layout_width="wrap_content" android:background="@color/ALL_green"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="100dp"
                android:padding="15dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_arrow_right_selector" />
            </LinearLayout>
        </LinearLayout>

        <!--<Button-->
        <!--android:id="@+id/btnLearn"-->
        <!--android:layout_width="180dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:background="@drawable/btn_red_selector"-->
        <!--android:padding="10dp"-->
        <!--android:text="@string/learn"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="25sp" />-->
    </LinearLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:layout_marginRight="30dp"
        android:background="#ffeeeeee" />
</android.support.v4.widget.DrawerLayout>
