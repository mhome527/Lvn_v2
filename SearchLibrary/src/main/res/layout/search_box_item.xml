<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <!--perm_group_system_clock-->
        <ImageView
            android:id="@+id/imgIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search" />

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/imgNext"
            android:layout_toRightOf="@+id/imgIcon1"
            tools:text="@string/abc_action_mode_done" />

        <TextView
            android:id="@+id/tvVn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle1"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/imgNext"
            android:layout_toRightOf="@+id/imgIcon1"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="@string/abc_action_mode_done" />

        <TextView
            android:id="@+id/tvMean2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvVn"
            android:layout_toLeftOf="@+id/imgNext"
            android:layout_toRightOf="@+id/imgIcon1"
            android:maxLines="1"
            tools:text="@string/abc_action_mode_done" />

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_next" />

    </RelativeLayout>


</android.support.v7.widget.CardView>


